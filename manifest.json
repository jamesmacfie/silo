{
  "manifest_version": 2,
  "version": "2.0.1",
  "name": "Silo",
  "description": "Automatically open websites in Firefox containers based on configurable rules",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_64.png",
    "128": "images/icon_128.png"
  },
  "author": "Silo Team",
  "background": {
    "scripts": ["src/background/index.ts"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Silo",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_64.png",
      "128": "images/icon_128.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Open Silo popup"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "browsingData",
    "webRequest",
    "webRequestBlocking",
    "contextualIdentities",
    "notifications",
    "bookmarks",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "silo@extensions.firefox.org",
      "strict_min_version": "91.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": ["technicalAndInteraction"]
      }
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'none'"
}
