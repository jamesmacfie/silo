{
  "private": true,
  "name": "silo",
  "description": "Silo - Modern Firefox container management extension",
  "version": "0.0.1",
  "author": {
    "name": "James Macfie",
    "url": "https://github.com/jamesmacfie/silo"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "extension dev",
    "dev:firefox": "extension dev --browser=firefox",
    "start": "extension start",
    "build": "node build-scripts/build-all.js",
    "build:popup": "node build-scripts/build-popup.js",
    "build:popup:css": "mkdir -p temp && tailwindcss -c tailwind.config.ts -i ./src/ui/popup/index.css -o ./temp/popup.iife.css --minify",
    "build:options": "node build-scripts/build-options.js",
    "build:options:css": "mkdir -p temp && tailwindcss -c tailwind.config.ts -i ./src/ui/options/index.css -o ./temp/options.iife.css --minify",
    "build:firefox": "node build-scripts/build-all.js --firefox",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "fmt": "biome check --write",
    "fmt:check": "biome check"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.0.0",
    "dnd-kit-sortable-tree": "^0.1.73",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.539.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^111.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.25.8",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "extension": "^2.0.0-rc.38",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.39.0",
    "postcss": "^8.4.41",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.0"
  }
}
